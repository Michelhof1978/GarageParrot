import React from 'react';
import ReCAPTCHA from "react-google-recaptcha";

const Recaptcha = () => {
  const handleCaptchaChange = (response) => {
    console.log("Captcha value:", response);
    // Vous pouvez utiliser la valeur de la réponse du captcha dans votre logique ici
  };

  return (
    <div>

      <ReCAPTCHA
        sitekey=""
        onChange={handleCaptchaChange}
      />
      
    </div>
  );
};

export default Recaptcha;
import React, { useState } from 'react';
import ReCAPTCHA from "react-google-recaptcha";

const App = () => {
  const [captchaValue, setCaptchaValue] = useState("");

  const handleCaptchaChange = (response) => {
    console.log("Captcha value:", response);
    setCaptchaValue(response); // Mettre à jour la valeur du captcha
  };

  const handleSubmit = (e) => {
    e.preventDefault();

    if (captchaValue) {
      console.log("Form submitted successfully!");
      // Ajoutez votre logique d'envoi de formulaire ici
    } else {
      console.log("Please complete the reCAPTCHA.");
    }
  };

  return (
    <div>
      <h1>reCAPTCHA Google Example</h1>
      <form onSubmit={handleSubmit}>
        {/* Votre contenu de formulaire */}
        <ReCAPTCHA
          sitekey="VOTRE_CLE_RECAPTCHA"
          onChange={handleCaptchaChange}
        />
        <button type="submit">Submit</button>
      </form>
    </div>
  );
};

export default App;
